---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

// para que te salga toda la metadata del autor, en el archivo config tienes que añadirla que uno de los motibos por lo que no me salía la tarea era este
const { author } = Astro.props;
---

<section class="max-w-md mx-auto my-5 bg-white rounded-lg shadow-md p-5">
  <Image
    width={128}
    height={128}
    class="rounded-full mx-auto"
    src={author.data.avatar}
    alt=`Image of ${author.data.name}`
  />
  <h2 class="text-center text-2xl font-semibold mt-3 text-black/80">
    {author.data.name}
  </h2>
  <p class="text-center text-gray-600 mt-1">{author.data.subtitle}</p>
  <section class="flex justify-center mt-5">
    <a
      href=`https://x.com/${author.data.twitter}`
      class="text-yellow-500 hover:text-yellow-600 mx-3">Twitter</a
    >
    <a
      href={author.data.linkedIn}
      class="text-yellow-500 hover:text-yellow-600 mx-3">LinkedIn</a
    >
    <a
      href={author.data.github}
      class="text-yellow-500 hover:text-yellow-600 mx-3">GitHub</a
    >
  </section>
  <section class="mt-5">
    <h3 class="text-xl font-semibold text-black/70">Bio</h3>
    <p class="text-gray-600 mt-2">
      {author.data.bio}
    </p>
    <div class="flex justify-end text-end pt-5">
      <a class="text-black/95 underline" href=`/blog/${author.id}`>Read more</a>
    </div>
  </section>
</section>
